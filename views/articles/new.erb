<div class="post-list">
  <h1>Submit a new article to Slacker News</h1>
  <div class="error">
  <%if @errors.empty? == false %>
    <% @errors.each do |message| %>
      <p><%=message%></p>
    <%end%>
  <%end%>
  </div>

  <form action="/articles/new" method="post">
    <div>
      <label for="title">Title: </label>
      <input type="text" name="title" id="title" placeholder="Enter a title for the article." value="<%=params[:title]%>"/>
    </div>

    <div>
      <label for="description">Description: </label>
      <input type="text" name="description" id="description" placeholder="Enter a brief description of the article." value="<%=params[:description]%>"/>
    </div>

    <div>
      <label for="url">URL: </label>
      <input type="text" name="url" id="url" placeholder="Enter a valid URL." value="<%=params[:url]%>"/>
    </div>

    <div>
      <label for="username">Username: </label>
      <input type="text" name="username" id="username" placeholder="Enter username." value="<%=params[:username]%>"/>
    </div>

    <input type="submit" value="Submit"/>
  </form>
</div>
